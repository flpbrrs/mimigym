<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fonts -->
    <style name="TextMedium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLarge">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Label">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading">
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Components -->
    <style name="App.PrimaryButton.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Label</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Mimi.TextInputEditText.Base" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/slc_input_active_mode_tint</item>
        <item name="android:drawableTint">@color/slc_input_active_mode_tint</item>
        <item name="android:drawablePadding">@dimen/sm_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/xxl_54dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Mimi.AutoCompleteView.Base" parent="Mimi.TextInputEditText.Base">
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="Mimi.ImageButton.Base" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/xl_48dp</item>
        <item name="android:layout_height">@dimen/xl_48dp</item>
    </style>

    <style name="Mimi.ImageButton.Outlined" parent="Mimi.ImageButton.Base">
        <item name="android:background">@drawable/bg_outlined_white_border</item>
        <item name="android:tint">@color/brand_complement</item>
    </style>

    <style name="Mimi.ImageButton.Filled" parent="Mimi.ImageButton.Base">
        <item name="android:background">@drawable/bg_filled_brand</item>
        <item name="android:tint">@color/brand_complement</item>
    </style>

</resources>